<div class="edit-widget">
{% block form %}
<form class="ajax" update="widget-{{id}}" method="POST" action="{{path('victoire_cms_widget_edit', {'id':id, 'type':entity} )}}">

{% if entity %}
    {{form_widget(form.entity)}}
{% else %}
    {{form_row(form.image)}}
    {{form_row(form.alt)}}
    {{form_row(form.title)}}
{% endif %}
{{form_rest(form)}}
{{form_errors(form)}}

{% block submit %}
    <button class="btn btn-success" type="submit">{{ 'ok'|trans|desc('Ok') }}</button>
    <a class="btn" class="cancel" onclick="cancelWidgetEdition({{id}}, '{{path('victoire_cms_widget_show', {'id':id} )}}');">{{ 'cancel'|trans|desc('Annuler') }}</a>
{% endblock submit %}
</form>
{% endblock form %}

</div>
{% endblock body %}
